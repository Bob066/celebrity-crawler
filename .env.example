# LLM API Keys (至少配置一个)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Twitter/X API (可选)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# YouTube API (可选)
YOUTUBE_API_KEY=your-youtube-api-key

# Google Custom Search (可选，用于新闻搜索)
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_CX=your-custom-search-engine-id

# 数据库 - Vercel Postgres (部署时在 Vercel 控制台自动配置)
# 创建方式: Vercel Dashboard -> Storage -> Create Database -> Postgres
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://username:password@host:5432/database?sslmode=require"
